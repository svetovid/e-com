@page "/payment"
@rendermode InteractiveAuto

<h1>Make a payment</h1>

<EditForm Model="@Model" OnValidSubmit="Deposit" FormName="payment_form" class="row g-3">
  <label for="amount" class="col-sm-2 col-form-label">Amount</label>
  <div class="col-auto">
    <InputNumber id="amount" type="text" class="form-control" @bind-Value="@Model.Amount" placeholder="@Model.Currency" />
  </div>
  <div class="col-auto">
    <button type="submit" class="btn btn-primary"> Deposit </button>
  </div>
</EditForm>
<hr />
<div class="form-control tran-logs">
  @((MarkupString)Messages)
</div>
